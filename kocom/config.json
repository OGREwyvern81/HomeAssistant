{
  "name": "Kocom Wallpad with RS485",
  "version": "1.0.0",
  "slug": "kocom_wallpad_ha",
  "description": "Kocom Wallpad for Home Assistant",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "url": "https://github.com/clipman/addons",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "map": [
    "share:rw"
  ],
  "options": {
    "RS485": {
      "type": "socket",
      "socket_server": "192.168.219.195",
      "socket_port": "8899",
      "serial_port": "/dev/ttyUSB0"
    },
    "MQTT": {
      "mqtt_server": "192.168.219.130",
      "mqtt_port": "1883",
      "mqtt_username": "admin",
      "mqtt_password": "admin3844",
      "mqtt_allow_anonymous": false
    },
    "Device": {
      "enabled": "light, fan, thermo_livingroom, thermo_room1, thermo_room2, thermo_room3, elevator"
    },
    "Elevator": {
      "type": "rs485",
      "rs485_floor": "15"
    },
    "Log": {
      "show_query_hex": true,
      "show_recv_hex": true,
      "show_mqtt_publish": true
    },
    "Advanced": {
      "INIT_TEMP": "23",
      "INIT_FAN_MODE": "2",
      "LIGHT_COUNT": "2"
    }
  },
  "schema": {
    "RS485": {
      "type": "list(serial|socket)",
      "socket_server": "str?",
      "socket_port": "str?",
      "serial_port": "str?"
    },
    "MQTT": {
      "mqtt_server": "str?",
      "mqtt_port": "str?",
      "mqtt_username": "str?",
      "mqtt_password": "str?",
      "mqtt_allow_anonymous": "bool?"
    },
    "Device": {
      "enabled": "str?"
    },
    "Elevator": {
      "type": "str?",
      "rs485_floor": "int?"
    },
    "Log": {
      "show_query_hex": "bool?",
      "show_recv_hex": "bool?",
      "show_mqtt_publish": "bool?"
    },
    "Advanced": {
      "INIT_TEMP": "int(10,30)",
      "INIT_FAN_MODE": "str?",
      "LIGHT_COUNT": "int(1,20)"
    }
  }
}
